@keyframes timer-loader
    0%
        transform rotate(0deg)
    100%
        transform rotate(360deg)

.timer-loader
    &:not(:required)
        border 4px solid #c8d
        border-radius 45px
        box-sizing border-box
        display inline-block
        overflow hidden
        position relative
        text-indent -9999px
        width 90px
        height 90px
    &:not(:required)::before
        animation timer-loader 1250ms infinite linear
        transform-origin 2px 2px
        background #c8d
        border-radius 2px
        content ''
        display block
        position absolute
        width 4px
        height 32px
        left 39px
        top 39px
    &:not(:required)::after
        animation timer-loader 15000ms infinite linear
        transform-origin 2px 2px
        background #c8d
        border-radius 2px
        content ''
        display block
        position absolute
        width 4px
        height 22px
        left 39px
        top 39px
