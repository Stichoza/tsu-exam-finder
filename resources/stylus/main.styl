@require '_variables.styl'
@require '_utils.styl'
@require '_spinner.styl'
@require '_svg.styl'

body
    background-color background-color
    font-family 'ALK Life'

.page-content
    position relative
    z-index 300

.header-title
    font-size 42px
    padding 4px 0 8px

.date, .time
    font-size text-size

.date > span::after
    display inline
    content ','

.date-inputs
    margin-top 15px

.ui-clickable
    cursor pointer
    border-bottom 2px dotted transparent
    &:hover
        border-bottom-color black

.sticky-copyright
    @extend .animated
    position absolute
    bottom 0
    width 100%
    padding 5px 0
    margin 0
    background-color rgba(black, 0.1)
    font-size 10px
    .author-heart
        color #e79f9d
    &:hover
        z-index 350
        background-color rgba(black, .3)
    &, & a
        color #fff
    a
        text-decoration underline
    *
        margin 0

.sweet-inputs input
    background none
    box-shadow none
    border none
    border-bottom 2px dotted text-color
    border-radius 0
    font-size text-size
    padding 3px 5px 2px
    color text-color
    &:focus
        box-shadow none
        border-bottom 2px solid text-color

input.input-sweetalert-time
    display block !important
    padding 0
    box-shadow none !important
    border none !important
    font-size 42px
    text-align center
    font-weight bold

.small-hint
    font-size 11px

.sweet-alert
    p
        line-height 1.5
    input
        line-height 1

.btn-spinner
    padding 3px 16px
    font-size 18px
    margin 0 4px
    font-family monospace
    border none
    background-color #8cd4f5
    &:hover
        background-color #7ecff4
    &active
        background-color #5dc2f1
    

////////////////////////////////////////////////////////////////////

@media (max-width: 320px)
    .header-title
        font-size 24px
        padding 0
    
    .sweet-inputs input, .date, .time
        font-size text-size-sm
    
    .sweet-inputs input
        padding 3px 2px
        margin-top 3px
        height text-size-sm + 14px


////////////////////////////////////////////////////////////////////

@media (max-width: 640px)
    .header-title
        font-size 24px
