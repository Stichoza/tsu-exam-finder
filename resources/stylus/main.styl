@require '_variables.styl'
@require '_utils.styl'

body
    background-color background-color
    font-family 'ALK Life'

.svg-desk
    position fixed
    top 0
    left 0
    right 0
    bottom offset-bottom
    background-image url('../../assets/desk.svg')
    background-size cover
    z-index 200
    box-shadow 0 0 64px rgba(black, .15)

.svg-shelf-r, .svg-shelf-l
    @extend .animated
    position fixed
    z-index 150
    width 140px
    left 50%
    &:hover
        margin-bottom 0

.svg-shelf-r
    bottom "calc(%s - 52px)" % offset-bottom
    margin-left 240px
    margin-bottom 20px

.svg-shelf-l
    bottom "calc(%s - 84px)" % offset-bottom
    margin-left -350px
    margin-bottom 50px

.svg-stuff
    position fixed
    bottom "calc(%s - 150px)" % offset-bottom
    width 580px
    left 50%
    margin-left -290px
    z-index 250
    pointer-events none

.page-content
    position relative
    z-index 300

.header-title
    font-size 42px
    padding 4px 0 8px

.date, .time
    font-size text-size

.date > span::after
    display inline
    content ','

.date-inputs
    margin-top 15px

.ui-clickable
    cursor pointer
    border-bottom 2px dotted transparent
    &:hover
        border-bottom-color black

.sticky-copyright
    @extend .animated
    position absolute
    bottom 0
    width 100%
    padding 5px 0
    margin 0
    background-color rgba(black, 0.1)
    font-size 10px
    .author-heart
        color #e74c3c
    &:hover
        z-index 350
        background-color rgba(black, .3)
    &, & a
        color #fff
    a
        text-decoration underline
    *
        margin 0

.sweet-inputs input
    background none
    box-shadow none
    border none
    border-bottom 2px dotted text-color
    border-radius 0
    font-size text-size
    padding 3px 5px 2px
    color text-color
    &:focus
        box-shadow none
        border-bottom 2px solid text-color

////////////////////////////////////////////////////////////////////

@media (max-width: 320px)
    .header-title
        font-size 24px
        padding 0
    
    .sweet-inputs input, .date, .time
        font-size text-size-sm
    
    .sweet-inputs input
        padding 3px 2px
        margin-top 3px
        height text-size-sm + 14px
